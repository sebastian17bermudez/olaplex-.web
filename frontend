<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Productos Olaplex</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <header class="bg-white shadow p-4">
    <h1 class="text-2xl font-bold text-center text-gray-800">Productos Olaplex</h1>
  </header>

  <main class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6" id="productos">
    <!-- Productos se cargarán aquí con JavaScript -->
  </main>

  <script>
    const productos = [
      {
        nombre: "Olaplex Nº3 Hair Perfector",
        descripcion: "Tratamiento reparador intensivo.",
        precio: 25.99,
        imagen: "https://example.com/olaplex3.jpg"
      },
      {
        nombre: "Olaplex Nº4 Shampoo",
        descripcion: "Limpia y fortalece el cabello.",
        precio: 22.49,
        imagen: "https://example.com/olaplex4.jpg"
      }
    ];

    const contenedor = document.getElementById('productos');
    productos.forEach(p => {
      const div = document.createElement('div');
      div.className = 'bg-white rounded-2xl p-4 shadow-md';
      div.innerHTML = `
        <img src="${p.imagen}" alt="${p.nombre}" class="w-full h-48 object-cover rounded-lg mb-4"/>
        <h2 class="text-xl font-semibold">${p.nombre}</h2>
        <p class="text-gray-600">${p.descripcion}</p>
        <p class="mt-2 font-bold">$${p.precio}</p>
        <button class="mt-4 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
          Añadir al carrito
        </button>
      `;
      contenedor.appendChild(div);
    });
  </script>
</body>
</html>
